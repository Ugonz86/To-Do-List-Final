@{
  Layout = "_Layout";
}

@using ToDoList.Models;
@model List<ToDoList.Models.Category>;

<h1>Categories</h1>
<hr />

@if (@Model.Count == 0)
{
<h3>No categories have been added yet!</h3>
}

@foreach (Category category in Model)
{
<ul>@Html.ActionLink($"{category.Name}", "Details", new { id = category.CategoryId })</ul>
}

<hr />
<p>@Html.ActionLink("Add New Category", "Create")</p>
<p>@Html.ActionLink("Delete All Categories", "DeleteAll")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
