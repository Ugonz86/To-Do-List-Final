@{
  Layout = "_Layout";
}

@using ToDoList.Models;
@model List<ToDoList.Models.Item>;

<h1>Items</h1>
<hr />

@if (@Model.Count == 0)
{
  <h3>No items have been added yet!</h3>
}

@foreach (Item item in Model)
{
  <ul>@Html.ActionLink($"{item.Description}", "Details", new { id = item.ItemId }) | @item.Category.Name</ul>
}

<hr />
<p>@Html.ActionLink("Add new item", "Create")</p>
<p>@Html.ActionLink("Delete All items", "DeleteAll")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
